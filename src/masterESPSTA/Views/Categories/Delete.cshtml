@model ModelViewCategory

@{ ViewData["Title"] = Model.NameCategory; }

@if (!Model.CoverPage.Any())
{
    <!--? Hero Start -->
    <div class="slider-area">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center">
                            <h2>Nuestros Servicios</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <br />
}


<div class="about-details section-padding30">
    <div class="container">
        <div class="row">
            <div class="feature-img">
                <img class="img-fluid" src="~/images/categories/@Model.CoverPage" alt="@Model.NameCategory">
            </div>
            <div class="blog_details">
                <h2 style="color: #2d2d2d;">
                    @Model.NameCategory
                </h2>
                <ul class="blog-info-link mt-3 mb-4">
                    <li><i class="far fa-calendar-alt"></i> Fecha de publicación: @Model.DateCreate</li>
                </ul>

                @Html.Raw(Model.Description)

            </div>
        </div>

        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" class="genric-btn danger btn-block m-2" value="Delete" />
                <a class="genric-btn primary btn-block m-2" asp-action="Index">Back to List</a>
            </form>
        </div>
        <div class="m-2">

            <div class="col-xl-12">
                <div class="alert alert-warning alert-dismissible fade show m-3" role="alert">
                    <strong>Advertencia!</strong>  Si deseas eliminar ten en cuenta que se perdera toda la información
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>

        </div>

    </div>
</div>

