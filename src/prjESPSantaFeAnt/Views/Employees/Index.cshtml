@model IEnumerable<ModelViewEmployees>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/funcionarios">Funcionarios</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado General</li>
            </ol>
        </nav>
        <p>
            <a class="btn btn-secondary btn-block" asp-action="Create">Crear un nuevo registro</a>
        </p>
    </div>

    <div class="container bg-primary-light">

        <table id="myTable" class="table">
            <thead>
                <tr>
                    <th width="10%">
                        @Html.DisplayNameFor(model => model.EmployeeId)
                    </th>
                    <th width="50%">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Occupation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Occupation)
                        </td>
                        <td>
                            <a class="btn btn-dark p-2" asp-action="Delete" asp-route-id="@item.EmployeeId"><span><img src="~/images/iconos/delete.svg" width="25" /></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
