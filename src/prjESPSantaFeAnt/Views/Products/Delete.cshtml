@model model.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="site-section">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/servicios">Servicios</a></li>
                <li class="breadcrumb-item"><a asp-controller="product" asp-action="index">Listado General</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <div class="row justify-content-md-center">
            <div class="col-md-10">
                <section>

                    <div class="col-lg-12">

                        <div class="container">
                            <h3 class="text-center">
                                @Html.DisplayFor(model => model.Name)
                            </h3>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><h6 style="color: #0083ad;">Fecha de creación. @Model.DateCreate</h6></li>
                                </ol>
                            </nav>
                            @Html.Raw(Model.Description)
                            <br />

                        </div>

                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductId" />
                        <input type="submit" value="Eliminar" class="btn btn-danger btn-block" />
                    </form>

                </section>
            </div>
        </div>
    </div>
</div>

