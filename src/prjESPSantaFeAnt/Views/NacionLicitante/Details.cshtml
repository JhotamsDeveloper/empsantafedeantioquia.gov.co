@model ModelViewNacionLicitante

@{
    ViewData["Title"] = Model.NameMaster;
    var _nacionLicitantegStartDate = Convert.ToDateTime(Model.NacionLicitantegStartDate);
    var _nacionLicitanteEndDate = Convert.ToDateTime(Model.NacionLicitanteEndDate);
    var _currentDate = DateTime.Now;
}

<div class="site-section">
    <div class="container">
        
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/convocatorias">Convocatorias</a></li>
                @if (ViewBag.detail)
                {
                    <li class="breadcrumb-item"><a asp-controller="nacionlicitante" asp-action="index">Listado General</a></li>
                }
                <li class="breadcrumb-item active" aria-current="page">@Model.NameMaster</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-8 blog-content">
                <div class="row mb-5">

                    <div class="col-lg-12">
                        <figure>
                            <img src="~/images/nacionLicitante/@Model.CoverPage" alt="@Model.NameMaster" class="img-fluid">
                            <figcaption>@Model.NameMaster</figcaption>
                        </figure>
                    </div>
                    <div class="col-lg-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                @if (Convert.ToDateTime(Model.DateUpdate) >= Convert.ToDateTime(Model.DateCreate))
                                {
                                    <li class="breadcrumb-item"><span>Publicación actualizada: @Model.DateUpdate</span></li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item"><span>Publicación: @Model.DateCreate</span></li>
                                }
                                @{
                                    if (_currentDate >= _nacionLicitantegStartDate)
                                    {
                                        if (_currentDate <= _nacionLicitanteEndDate)
                                        {
                                            <li class="breadcrumb-item"><span>Estado de la concovatoria : <strong>Activa</strong></span></li>

                                        }
                                        else
                                        {
                                            <li class="breadcrumb-item"><span>Estado de la concovatoria : <strong>Inactiva</strong></span></li>
                                        }
                                    }
                                }
                                <li class="breadcrumb-item">Convocatoria de @Model.NacionLicitantegStartDate hasta @Model.NacionLicitanteEndDate</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-sm-12">
                        <h1>
                            @Html.DisplayFor(model => model.NameMaster)
                        </h1>
                    </div>
                    <div class="col-sm-12">
                        @Html.Raw(Model.Description)

                        <a asp-action="Documento-Oficial-de-la-convocatoria"
                           asp-route-nameFile="@Model.NameMaster"
                           asp-route-routeFile="@Model.NacionLicitantegFile"
                           target="_blank">
                            <strong>Descargar terminos de la convocatoria</strong>
                        </a>
                        <br />
                        @{
                            if (_currentDate >= _nacionLicitantegStartDate)
                            {
                                if (_currentDate <= _nacionLicitanteEndDate)
                                {
                                    <a href="~/convocatorias/participacion/@ViewBag.idConvocatoria"><strong>Participar de la convocatoria</strong></a>
                                    @*<a asp-controller="BiddingParticipants" asp-action="create" asp-route-idConvocatoria="@ViewBag.idConvocatoria"><strong>Participar de la convocatoria</strong></a>*@
                                }
                            }
                        }
                    </div>
                </div>
                



                @if (ViewBag.detail)
                {
                    <div class="container">
                        <div>
                            <a class="btn btn-warning btn-block" asp-action="Edit" asp-route-id="@Model.Id"><span><img src="~/images/iconos/edit.svg" width="30" /></span></a>
                        </div>
                    </div>
                }

            </div>
