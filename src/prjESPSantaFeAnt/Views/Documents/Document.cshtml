@model IEnumerable<ModelViewDocument>

@{
    ViewData["Title"] = "Documentos legales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Documentos legales</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-7 mx-auto text-center">
                <h2 class="mb-4 section-heading">Documentos legales</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <!--- \\\\\\\Post-->
                <div class="card gedf-card symptom d-flex m-3">
                    <div class="card-header" style="background: #ffda004f;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="ml-2">
                                    <div class="h7 text-muted">@item.NameProyect </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="card-body">
                        <a class="card-link" href="~/documentos-legales/@item.UrlName">
                            <h5 class="card-title"> @item.Name</h5>
                        </a>

                        <p class="card-text">
                            @Html.Raw(item.Description.Substring(0, 150))
                        </p>
                    </div>
                    <div class="card-footer">
                        <h6>Estos documentos fueron públicados en @item.CreateDate y tiene @item.FileDocument.Count() arichivos pdf</h6>
                    </div>
                </div>
                <!-- Post /////-->
            }

        </div>
    </div>
</div>