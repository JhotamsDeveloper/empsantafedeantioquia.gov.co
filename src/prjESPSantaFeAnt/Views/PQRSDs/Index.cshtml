@model IEnumerable<ModelViewPQRSD>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="PQRSDa" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/pqrsd">PQRSD</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado General</li>
            </ol>
        </nav>
    </div>

    <div class="container bg-primary-light">

        <table id="myTable" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NamePerson)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PQRSDName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameSotypeOfRequest)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAnsweredPQRSD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreate)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamePerson)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PQRSDName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameSotypeOfRequest)
                    </td>
                    <td class="text-center">
                        @{
                            if (@item.IsAnsweredPQRSD)
                            {
                                <input class="form-check-input text-center" type="checkbox" checked disabled>
                            }
                            <input class="form-check-input text-center" type="checkbox" disabled>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreate)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.PQRSDID"><span><img src="~/images/iconos/view.svg" width="30" /></span></a> |
                        <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.PQRSDID"><span><img src="~/images/iconos/delete.svg" width="30" /></span></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
