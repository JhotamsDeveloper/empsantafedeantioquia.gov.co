@model ModelViewBrigade

@{
    ViewData["Title"] = Model.NameMaster;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="site-section">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/brigadas">Brigadas</a></li>
                <li class="breadcrumb-item"><a asp-controller="brigades" asp-action="index">Listado General</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.NameMaster</li>
            </ol>
        </nav>

        <div class="row justify-content-md-center">
            <div class="col-md-10">
                <section>

                    <div class="row mb-5">
                        <div class="col-lg-12">

                            <img src="~/images/brigade/@Model.CoverPage" />

                            <h1 class="text-center">
                                @Html.DisplayFor(model => model.NameMaster)
                            </h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><h6 style="color: #0083ad;">Autor: @Model.Author | Publicación el: @Model.DateCreate</h6></li>
                                </ol>
                            </nav>
                        </div>
                        <div class="col-sm-12">
                            @Html.Raw(Model.Description)
                        </div>
                        <br />

                    </div>

                    <div class="container">
                        <div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-warning btn-block" /> |

                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
