@model ModelViewBiddingParticipant

@{
    ViewData["Title"] = Model.IdentificationOrNit;
}

    <div class="site-section">
        <div class="container">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="~/convocatorias">Convocatorias</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.NameNocionLicitante participante @Model.IdentificationOrNit</li>
                </ol>
            </nav>
            <div>
                <div>
                    <div class="text-center">
                        <h1>sr(a) @Model.Name</h1>
                        <h3>Convocatoria @Model.NameNocionLicitante</h3>
                    </div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NaturalPerson)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NaturalPerson)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IdentificationOrNit)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdentificationOrNit)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cellular)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cellular)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Address)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.City)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DateCreate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DateCreate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Proposals)
                        </dt>
                        <dd class="col-sm-10">
                            <a asp-action="Documento-participante"
                               asp-route-nameFile="@Model.IdentificationOrNit"
                               asp-route-routeFile="@Model.Proposals"
                               target="_blank">
                                <strong>Descargar terminos de la convocatoria</strong>
                            </a>
                        </dd>
                    </dl>


                    @if (ViewBag.successful == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <p> Usted se ha registrado exitosamente a la convocatoria. Le pedimos que este pendiente del correo electrónico y de los teléfonos suministrados, buena suerte</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>




