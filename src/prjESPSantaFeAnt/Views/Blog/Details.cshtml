@model ModelViewBlog

@{
    ViewData["Title"] = Model.NameBlog;
    var _currentDate = DateTime.Now;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="site-section">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/noticias">Noticias</a></li>
                @if (ViewBag.detail)
                {
                    <li class="breadcrumb-item"><a asp-controller="blog" asp-action="index">Listado General</a></li>
                }
                <li class="breadcrumb-item active" aria-current="page">@Model.NameBlog</li>
            </ol>
        </nav>

        <div class="row justify-content-md-center">
            <div class="col-md-10">
                <section>

                    <div class="col-lg-12">

                        <div class="container">
                            <div class="row justify-content-md-center bg-primary-light" style="width:100%">
                                <img src="~/images/blog/@Model.CoverPage" class="img-fluid" />
                            </div>
                            <br />
                            <h3 class="text-center">
                                @Html.DisplayFor(model => model.NameBlog)
                            </h3>
                            @Html.Raw(Model.Description)
                            <br />

                            <small>
                                Autor: @Model.Author
                                <br />
                                Fecha de creación: @Model.DateCreate
                            </small>

                        </div>

                    </div>


                </section>
            </div>
        </div>
    </div>
</div>


