@model modelDTOs.BlogCreateDto

@{
    ViewData["Title"] = "Create";
}

<div class="site-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Inicio</a></li>
                <li class="breadcrumb-item"><a href="~/blog">blog</a></li>
                <li class="breadcrumb-item"><a asp-controller="blog" asp-action="index">Listado General</a></li>
                <li class="breadcrumb-item active" aria-current="page">Crear</li>
            </ol>
        </nav>
    </div>

    <div class="container bg-primary-light">

        <div class="row justify-content-md-center">
            <div class="col-lg-10 m-3">
                <form enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="NameBlog" class="control-label"></label>
                        <input asp-for="NameBlog" class="form-control" />
                        <span asp-validation-for="NameBlog" class="text-danger">@ViewBag.DuplicaName</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="20"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoverPage" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="CoverPage" class="custom-file-input" id="customFile" accept=".jpg, .png, .jpeg">
                            <label class="custom-file-label" for="customFile">Elija la imagen</label>
                        </div>
                        <span asp-validation-for="CoverPage" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label text-center">
                            <input class="form-check-input" asp-for="Statud" /> @Html.DisplayNameFor(model => model.Statud)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script type="text/javascript">
        // Agregue el siguiente código si desea que aparezca el nombre del archivo en select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}